<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="9"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/buttonFois"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="8"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintWidth_percent="0.25"
        />


    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="7"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintWidth_percent="0.25"
      />


    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="6"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/buttonMoin"
        app:layout_constraintWidth_percent="0.25"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="5"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintWidth_percent="0.25"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="4"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintWidth_percent="0.25"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="3"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonVirgule"
        app:layout_constraintEnd_toStartOf="@id/buttonPlus"
        app:layout_constraintWidth_percent="0.25"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="539dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="2"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintWidth_percent="0.25"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="554dp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="1"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlusMoin"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintWidth_percent="0.25"
        />

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onNumberClick"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonPlusMoin"
        app:layout_constraintWidth_percent="0.25"
     />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onOperatorClick"
        android:text="+"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEgal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
      />

    <Button
        android:id="@+id/buttonFois"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onOperatorClick"
        android:text="*"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMoin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"

        />

    <Button
        android:id="@+id/buttonVirgule"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text=","
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintWidth_percent="0.25"
        tools:ignore="MissingConstraints"
        android:onClick="onNumberClick"

        />

    <Button
        android:id="@+id/buttonSlash"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onOperatorClick"
        android:text="/"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFois"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonEgal"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_light"
        android:text="="
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        android:onClick="onResultClick"/>

    <Button
        android:id="@+id/buttonMoin"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onOperatorClick"
        android:text="-"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        />

    <Button
        android:id="@+id/buttonPlusMoin"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="+/_"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button0"
        app:layout_constraintWidth_percent="0.25"
        android:onClick="notImlemented"
   />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onClearClick"
        android:text="C"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/buttonParenthese"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonParenthese"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="( )"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/buttonPourcentage"
        app:layout_constraintWidth_percent="0.25"
        android:onClick="notImlemented"

        />

    <Button
        android:id="@+id/buttonPourcentage"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="%"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toStartOf="@+id/buttonSlash"
        app:layout_constraintWidth_percent="0.25"
        android:onClick="notImlemented"
        />

    <Button
        android:id="@+id/buttonRetour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@android:drawable/ic_input_delete"
        android:drawableTint="@color/colorPrimaryDark"
        android:onClick="onDeleteInputClick"
        app:layout_constraintBottom_toTopOf="@+id/buttonSlash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/buttonHistorique"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:text="  Historique"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonC"
        android:onClick="showHistory"
        />

    <TextView
        android:id="@+id/outputView"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:ems="10"
        android:onClick="onNumberClick"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>
